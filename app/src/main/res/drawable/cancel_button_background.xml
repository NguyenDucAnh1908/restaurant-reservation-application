<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#77EC4B4B" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="20dp" /> <!-- Bo góc -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white" /> <!-- Màu nền mặc định -->
            <corners android:radius="20dp" /> <!-- Bo góc -->
        </shape>
    </item>
</selector>
